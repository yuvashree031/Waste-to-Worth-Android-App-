<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.WasteToWorth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- TextAppearance for TextInputLayout hints -->
    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/soft_text_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/soft_text_grey</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- TextInputEditText Style -->
    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/dark_navy_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/soft_text_grey</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Toolbar Title Style -->
    <style name="ToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
</resources>

