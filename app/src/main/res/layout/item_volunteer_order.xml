<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@color/text_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary_dark_blue"/>

        <TextView
            android:id="@+id/txtOrderAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Address"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnVolunteer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Volunteer"
                android:backgroundTint="@color/accent_blue"
                android:textColor="@color/text_white"/>

            <Button
                android:id="@+id/btnUpdateStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mark as Delivered"
                android:backgroundTint="@color/primary_dark_blue"
                android:textColor="@color/text_white"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
