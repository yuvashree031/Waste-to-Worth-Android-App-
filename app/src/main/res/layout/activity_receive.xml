<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    tools:context=".Receive">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive"
        android:fontFamily="@font/opensans"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/dark_navy_text"
        android:layout_margin="20dp"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:textColorHint="@color/pastel_violet_dark"
                    app:hintTextColor="@color/pastel_violet_dark"
                    app:boxStrokeColor="@color/pastel_violet_dark">

                    <EditText
                        android:id="@+id/receivername"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/opensans"
                        android:hint="@string/receiver_name"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/pastel_violet_dark"
                        android:textColorHint="@color/pastel_violet_dark"
                        android:textSize="20sp"
                        tools:ignore="UnusedAttribute" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quantityError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/text_primary"
                    app:hintTextColor="@color/text_primary"
                    app:boxStrokeColor="@color/text_primary">

                    <EditText
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Required Quantity (kg)"
                        android:textSize="20sp"
                        android:fontFamily="@font/opensans"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="numberDecimal"
                        android:textColor="@color/pastel_violet_dark"
                        android:textColorHint="@color/pastel_violet_dark"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:importantForAutofill="no"
                        tools:ignore="UnusedAttribute" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descriptionError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/pastel_violet_dark"
                    android:textColorHint="@color/pastel_violet_dark"
                    app:hintTextColor="@color/pastel_violet_dark"
                    android:textSize="20sp"
                    android:fontFamily="@font/opensans"
                    app:boxStrokeColor="@color/pastel_violet_dark">

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/opensans"
                        android:hint="@string/description"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_primary"
                        android:textSize="20sp"
                        tools:ignore="UnusedAttribute" />

                </com.google.android.material.textfield.TextInputLayout>

                <fragment
                    android:id="@+id/google_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    tools:ignore="FragmentTagUsage" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="@color/pastel_violet_dark"
                    android:text="@string/submit"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>

