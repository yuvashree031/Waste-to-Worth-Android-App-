<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    android:fitsSystemWindows="true">

    <!-- App Bar with ID added for reference -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clean_white"
        android:elevation="2dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/clean_white"
            app:titleTextColor="@color/dark_navy_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_app_logo"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/pastel_blue_primary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="wastetoworth"
                    android:textColor="@color/dark_navy_text"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"/>
                
                <!-- Voice Search Button -->
                <ImageView
                    android:id="@+id/btnVoiceSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mic"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/pastel_lavender_accent"
                    android:contentDescription="Voice Search"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content - Using NestedScrollView with proper spacing -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:clipToPadding="false"
        android:background="@color/background_off_white"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingHorizontal="12dp">

            <!-- Welcome Card - Now properly visible -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/border_light"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/pastel_blue_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textColor="@color/dark_navy_text"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Make a difference with your donations"
                        android:textColor="@color/soft_text_grey"
                        android:textSize="15sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="4dp">

                <!-- Donate Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDonate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_donate"
                            app:tint="@color/pastel_blue_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Donate"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ML Classifier Card (AI Scanner) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMLClassifier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/pastel_lavender_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="AI Scanner"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Urgent Request Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardUrgentRequest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_receive"
                            app:tint="@color/pastel_pink_warm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Urgent Request"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Food Map Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFoodmap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_map"
                            app:tint="@color/pastel_blue_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Food Map"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Donation Feed Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDonationFeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_feed"
                            app:tint="@color/pastel_lavender_accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Donation Feed"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Donation History Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDonationHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_history"
                            app:tint="@color/pastel_coral" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="My Donations"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Volunteer Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardVolunteer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/pastel_orange"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/pastel_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_volunteer"
                            app:tint="@color/pastel_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Volunteer"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- About Us Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAboutus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/pastel_yellow"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/pastel_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_about"
                            app:tint="@color/pastel_yellow"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="About Us"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- My Profile Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/pastel_indigo"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/pastel_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/pastel_indigo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="My Profile"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Settings Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/pastel_gray"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/pastel_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/pastel_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Settings"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Help Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHelp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/pastel_teal"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/pastel_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_help"
                            app:tint="@color/pastel_teal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Help &amp; Support"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Logout Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp"
                    app:strokeColor="@color/border_light"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/clean_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_logout"
                            app:tint="@color/pastel_pink_warm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Logout"
                            android:textColor="@color/dark_navy_text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/pastel_mint"
        app:elevation="8dp"
        app:borderWidth="0dp"
        app:rippleColor="@color/pastel_mint_dark"/>
</RelativeLayout>